<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<h2 class="text-center">Edit your comment</h2>

			<form class="form-horizontal" action="/cats/<%= cat._id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="name" class="col-sm-2 control-label">Author</label>
					<div class="col-sm-10">
						<input id="name" class="form-control" type="text" name="comment[author]" value="<%= comment.author %>">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-12">
						<textarea class="form-control" name="comment[content]" rows="4"><%= comment.content %></textarea>
					</div>
				</div>
				<button class="btn btn-default btn-lg">Update</button>
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>