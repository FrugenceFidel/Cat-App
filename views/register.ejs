<% include ./partials/header %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<div id="inputForm">
				<h2 class="text-center">Sign up</h2>
				<form class="form-horizontal" action="/register" method="POST">
					<div class="form-group">
						<label for="name" class="col-sm-2 control-label">Username</label>
						<div class="col-sm-10">
							<input id="name" class="form-control" type="text" name="username" placeholder="Your username">
						</div>
					</div>
					<div class="form-group">
						<label for="image" class="col-sm-2 control-label">Password</label>
						<div class="col-sm-10">
							<input id="image" class="form-control" type="password" name="password" placeholder="Password">
						</div>
					</div>
					<button class="btn btn-default col-sm-offset-2">Sign up</button>
				</form>
			</div>
		</div>
	</div>
</div>

<% include ./partials/footer %>