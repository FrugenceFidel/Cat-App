<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<div id="inputForm">
				<h2 class="text-center">Edit <%= cat.name %></h2>
				<form class="form-horizontal" action="/cats/<%= cat._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="name" class="col-sm-2 control-label">Name</label>
						<div class="col-sm-10">
							<input id="name" class="form-control" type="text" name="cat[name]" value="<%= cat.name %>">
						</div>
					</div>
					<div class="form-group">
						<label for="image" class="col-sm-2 control-label">Image url</label>
						<div class="col-sm-10">
							<input id="image" class="form-control" type="text" name="cat[image]" value="<%= cat.image %>">
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-12">
							<textarea class="form-control" name="cat[decription]" rows="4"><%= cat.description %></textarea>
						</div>
					</div>
					<button class="btn btn-default btn-lg">Update</button>
				</form>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>