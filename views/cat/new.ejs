<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<h2 class="text-center">Add Your Cat</h2>

			<form class="form-horizontal" action="/cats" method="POST">
				<div class="form-group">
					<label for="name" class="col-sm-2 control-label">Name</label>
					<div class="col-sm-10">
						<input id="name" class="form-control" type="text" name="cat[name]" placeholder="Your cat name">
					</div>
				</div>
				<div class="form-group">
					<label for="image" class="col-sm-2 control-label">Image url</label>
					<div class="col-sm-10">
						<input id="image" class="form-control" type="text" name="cat[image]" placeholder="Image address">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-12">
						<textarea class="form-control" name="cat[description]" rows="4" placeholder="Description"></textarea>
					</div>
				</div>
				<button class="btn btn-default btn-lg">Share to world</button>
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>